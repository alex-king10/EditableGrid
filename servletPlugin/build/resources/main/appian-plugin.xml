<appian-plugin name="Editable Grid Query Helper" key="editableGridQueryHelper">
    <plugin-info>
        <description>Editable Grid Query Helper</description>
        <vendor name="Appian Corporation" url="https://www.appian.com/"/>
        <version>1.0.0</version>
        <application-version min="23.2.0"/>
    </plugin-info>
<!-- SERVLET -->
    <servlet name="Get Logged In User" key="getLoggedInUser" class="com.appiancorp.cto.editablegrid.servlet.GetLoggedInUserServlet">
        <description>
            Servlet to get the logged in user.
        </description>
        <url-pattern>/getloggedinuser</url-pattern>
    </servlet>
    <servlet name="Get User Info" key="getUserInfo" class="com.appiancorp.cto.editablegrid.servlet.GetUserInfoServlet">
        <description>
            Servlet to get user information.
        </description>
        <url-pattern>/getuserinfo</url-pattern>
    </servlet>
    <servlet name="Execute Process" key="executeProcess" class="com.appiancorp.cto.editablegrid.servlet.ExecutePMServlet">
        <description>
            Servlet to execute a process model.
        </description>
        <url-pattern>/executeprocess</url-pattern>
    </servlet>
    <servlet name="Get User Security Info" key="getUserSecurity" class="com.appiancorp.cto.editablegrid.servlet.GetUserSecurityPermission">
        <description>
            Servlet to check the current user's security level.
        </description>
        <url-pattern>/getusersecurity</url-pattern>
    </servlet>
    <servlet name="Get Record By ID" key="getRecordByID" class="com.appiancorp.cto.editablegrid.servlet.GetRecordByID">
        <description>
            Servlet to query a record item by ID.
        </description>
        <url-pattern>/getRecordByID</url-pattern>
    </servlet>
    <servlet name="Get Record Type Information" key="getRecordTypeInfo" class="com.appiancorp.cto.editablegrid.servlet.GetRecordTypeInfo">
        <description>
            Servlet to query a record type's information.
        </description>
        <url-pattern>/getRecordTypeInfo</url-pattern>
    </servlet>


</appian-plugin>
