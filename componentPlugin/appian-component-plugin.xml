<?xml version="1.0" encoding="UTF-8"?>
<appian-component-plugin name="Grid+ Component Plug-In" key="com.appian.cto.gridPlusLayout">
  <plugin-info>
    <description>Editable grid component plug-in to create, update, and delete record data in a flexible and performant component.</description>
    <vendor name="Appian" url="www.appian.com"/>
    <version>1.0.0</version>
    <support supported="true" email="techpartners@appian.com" url="https://community.appian.com"/>
  </plugin-info>

  <component rule-name="gridPlusLayout" version="1.0.0">
    <sdk-version>2.0.0</sdk-version>

    <parameter>
      <name>rows</name>
      <category>input-only</category>
      <type>Variant</type>
    </parameter>

    <parameter>
      <name>primaryKeyFieldName</name>
      <category>input-only</category>
      <type>Variant</type>
    </parameter>

    <parameter>
      <name>columnConfigs</name>
      <category>input-only</category>
      <type>Variant</type>
    </parameter>

    <parameter>
      <name>changeData</name>
      <category>input-output</category>
      <type>Variant</type>
    </parameter>

    <parameter>
      <name>deleteData</name>
      <category>input-output</category>
      <type>Variant</type>
    </parameter>

    <parameter>
      <name>securityGroups</name>
      <category>input-only</category>
      <type>Variant</type>
    </parameter>

    <parameter>
      <name>rowHeaders</name>
      <category>input-only</category>
      <type>Boolean</type>
    </parameter>

    <parameter>
      <name>hiddenFields</name>
      <category>input-only</category>
      <type>Variant</type>
    </parameter>

     <parameter>
      <name>showPrimaryKey</name>
      <category>input-only</category>
      <type>Boolean</type>
    </parameter>

    <html-entry-point>index.html</html-entry-point>
    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
  </component>
</appian-component-plugin>
